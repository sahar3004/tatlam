import os
from openai import OpenAI

DB_PATH = os.getenv("DB_PATH", "db/tatlam.db")


def client_local():
    return OpenAI(
        base_url=os.getenv("LOCAL_BASE_URL"), api_key=os.getenv("LOCAL_API_KEY")
    )


def client_cloud():
    return OpenAI(
        base_url=os.getenv("OPENAI_BASE_URL", "https://api.openai.com/v1"),
        api_key=os.getenv("OPENAI_API_KEY"),
    )


GEN_MODEL = os.getenv("GEN_MODEL", "gpt-5")
VALIDATOR_MODEL = os.getenv("VALIDATOR_MODEL", "gpt-5")
EMBED_MODEL = os.getenv("EMBED_MODEL", "text-embedding-3-small")
LOCAL_MODEL = os.getenv("LOCAL_MODEL", "gpt-oss-20b")
